void topoSort(int V, ArrayList<ArrayList<Integer>> adj) {
    boolean[] visited = new boolean[V];
    Stack<Integer> st = new Stack<>();

    for (int i = 0; i < V; i++) {
        if (!visited[i])
            topoDfs(i, visited, st, adj);
    }

    while (!st.isEmpty())
        System.out.print(st.pop() + " ");
}

void topoDfs(int node, boolean[] visited, Stack<Integer> st,
             ArrayList<ArrayList<Integer>> adj) {
    visited[node] = true;

    for (int it : adj.get(node)) {
        if (!visited[it])
            topoDfs(it, visited, st, adj);
    }
    st.push(node);
}
