int[] bellmanFord(int V, int[][] edges, int src) {
    int[] dist = new int[V];
    Arrays.fill(dist, 100000000);
    dist[src] = 0;

    for (int i = 1; i < V; i++) {
        for (int[] e : edges) {
            int u = e[0], v = e[1], wt = e[2];
            if (dist[u] + wt < dist[v])
                dist[v] = dist[u] + wt;
        }
    }
    return dist;
}
