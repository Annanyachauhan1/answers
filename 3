import java.util.*;

class Solution {
    int countPairs(int arr[], int k) {
        HashMap<Integer,Integer> map=new HashMap<>();
        
        int count=0;
        
        for(int x:arr){
            count+=map.getOrDefault(k-x,0);
            map.put(x,map.getOrDefault(x,0)+1);
            
        }
        
        return count;
        
    }
}
