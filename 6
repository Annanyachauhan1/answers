static int minSubArrayLen(int k, int[] arr) {
    int left = 0, sum = 0, min = Integer.MAX_VALUE;

    for (int right = 0; right < arr.length; right++) {
        sum += arr[right];
        while (sum >= k) {
            min = Math.min(min, right - left + 1);
            sum -= arr[left++];
        }
    }
    return min == Integer.MAX_VALUE ? 0 : min;
}
